########################################
# LLM PROVIDERS (обязательно для web demo / core)
########################################

# Текстовые модели
OPENAI_API_KEY=sk-CHANGE_ME
XAI_API_KEY=xai-CHANGE_ME
DEEPSEEK_API_KEY=sk-CHANGE_ME

# Vision / работа со скриншотами и фото (Hugging Face access token)
HUGGING_FACE_API_KEY=hf_CHANGE_ME


########################################
# TOOLS / ВНЕШНИЕ СЕРВИСЫ (опционально, но желательно)
########################################

# Погода (используется в tools/weather)
OPENWEATHER_API_KEY=

# Карты / геокодинг (если будете подключать Google Maps)
GOOGLE_MAPS_API_KEY=

# Push-уведомления для напоминалок (Android)
PUSHY_SECRET_KEY=


########################################
# БАЗОВЫЕ НАСТРОЙКИ ПРОЕКТА
########################################

# ID создателя / дефолтного аккаунта (можно оставить test_user)
CREATOR_ACCOUNT_ID=test_user

# Таймзона по умолчанию для расписаний, напоминаний и локального времени
TIMEZONE=Europe/Moscow


########################################
# ХРАНИЛИЩА / БАЗЫ / ФАЙЛЫ
########################################

# Директория для хранения сессионного контекста (относительно корня проекта)
SESSION_CONTEXT_DIR=infrastructure/context_store/sessions

# Подключение к PostgreSQL.
# Замените YOUR_PASSWORD на реальный пароль пользователя postgres.
DATABASE_URL=postgresql+psycopg2://postgres:YOUR_PASSWORD@localhost:5432/victor_db

# Директория для vector store (Chroma / локальные эмбеддинги)
VECTOR_STORE_DIR=infrastructure/vector_store

# Путь к demo-ключам / тестовым аккаунтам для web demo
DEMO_KEYS_DIR=infrastructure/database/demo_keys.json

# Имя коллекции в ChromaDB для ключевой информации
CHROMA_COLLECTION_NAME=key_info


########################################
# ПРОМПТЫ / ПЕРСОНА / КОНТЕКСТ
########################################

# Системный промпт Victor (основная персона)
SYSTEM_PROMPT_PATH=core/persona/prompts/system.yaml

# Шаблоны контекста диалога
CONTEXT_PROMPT_PATH=core/dialog/templates/context.yaml


########################################
# ПУТИ К КОРНЮ ПРОЕКТА И МОДЕЛЯМ
########################################

# Корень Victor Core (если запускаете из корня проекта, можно оставить .)
VICTOR_CORE_ROOT=.

# Конфигурация моделей (пути к провайдерам, настройкам температуры и т.п.)
# Убедитесь, что имя файла совпадает с тем, что реально лежит в infrastructure/llm
MODEL_SETTINGS=infrastructure/llm/model_settings.yaml

# Имя эмбеддинг-модели для векторного хранилища
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
